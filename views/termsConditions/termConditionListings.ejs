<%- include("../layout/header.ejs"); %>

<style>
  .container-box {
    max-width: 800px;
    margin: 20px auto;
    padding: 20px;
    background: #ffffff;
    border-radius: 10px;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
  }

  .main-content {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1rem;
  }

  .section-header-breadcrumb {
    margin-bottom: 20px;
  }

  .form-group {
    margin-bottom: 1rem;
  }

  .form-control {
    width: 100%;
    padding: 8px;
    border: 1px solid #ddd;
    border-radius: 5px;
  }

  .btn-success {
    margin-left: 90%;
    background-color: darkcyan;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
  }

  .btn-success:hover {
    background-color: darkcyan;
  }
</style>

<script src="https://cdn.ckeditor.com/ckeditor5/36.0.1/classic/ckeditor.js"></script>

<div class="main-content">
  <section class="section container-box">
    <div class="section-header">
      <div class="section-header-breadcrumb"></div>
    </div>
    <div class="section-body">
      <div class="card">
        <div class="card-body">
          <form action="/createTerms" method="post">
            <div class="form-group">
              <label>Title</label>
              <input
                type="text"
                name="title"
                value="Terms &amp; Conditions"
                class="form-control"
                disabled
              />
            </div>
            <div class="form-group">
              <label>Description</label>
              <textarea
                id="content"
                name="content"
                class="form-control"
                required><%= termsData?.description %></textarea>
              <input type="hidden" name="id" value="<%= termsData?.id %>" />
            </div>
            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-success">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</div>

<script>
  ClassicEditor.create(document.querySelector("#content")).catch((error) => {
    console.error(error);
  });
</script>

