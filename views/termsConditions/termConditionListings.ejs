<%- include("../layout/header.ejs"); %>

<script src="https://cdn.ckeditor.com/ckeditor5/36.0.1/classic/ckeditor.js"></script>

<div class="main-content">
  <section class="section container-box">
    <div class="section-header">
      <div class="section-header-breadcrumb"></div>
    </div>
    <div class="section-body">
      <div class="card">
        <div class="card-body">
          <form method="post" action="/updateTerms">
            <div class="form-group">
              <label>Title</label>
              <input
                type="text"
                name="title"
                value="<%= termsData?.title %>"
                class="form-control"
                readonly
              />
            </div>
            <div class="form-group">
              <label>Description</label>
              <textarea
                id="content"
                name="description"
                class="form-control"
                required><%= termsData?.description %></textarea>
              <input type="hidden" name="id" value="<%= termsData?.id %>" />
              <input type="hidden" name="type" value="1" />

            </div>
            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-success">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
</div>

<script>
  ClassicEditor.create(document.querySelector("#content"))
    .then(editor => {
      document.querySelector("form").addEventListener("submit", () => {
        document.querySelector("#content").value = editor.getData();
      });
    })
    .catch(error => {
      console.error(error);
    });
</script>

