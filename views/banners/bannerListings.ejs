<%- include("../layout/header.ejs");%>

<style>
  .action-buttons {
    display: flex;
    align-items: center;
  }

  .action-buttons button {
    background-color: darkorange;
    color: white;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .action-buttons i {
    font-size: 1rem;
  }

  .bannerContainer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
  }

  .search-container {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .add-banner {
    margin-right: 5%;
    background-color: cadetblue;
    color: white;
    padding: 0.8rem 1.5rem;
    text-decoration: none;
    border-radius: 5px;
    font-size: 1rem;
    white-space: nowrap;
  }
</style>
<div class="bannerContainer">
  <div class="search-container">
    <label for="search">Search:</label>
    <input
      id="search"
      type="search"
      placeholder="Type to search..."
      aria-controls="myTable"
    />
  </div>
  <a href="/addBanner" class="add-banner">+ Add Banner</a>
</div>

<br />
<br />
<table>
  <tr>
    <th>S. No.</th>
    <th>Banner Image</th>
    <th>Action</th>
  </tr>

  <% bannerData.forEach((banner, index) => { %>
  <tr>
    <td><%= index + 1 %></td>
    <td>
      <img src="<%= banner.bannerImage ? banner.bannerImage : '/images/default.png' %>" 
     alt="BannerImage"
     style="width: 50px; height: 50px; border-radius: 10px" />

    </td>
    <td>
      <div class="action-buttons">
        <a href="/editBanner/<%= banner.id %>">
          <i class="fas fa-edit"></i>
        </a>
        <button class="delete-btn" id="<%= banner.id %>">
          <i class="fas fa-trash"></i>
        </button>
      </div>
    </td>
  </tr>
  <% }); %>
</table>

<script
  src="https://code.jquery.com/jquery-3.6.3.min.js"
  integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU="
  crossorigin="anonymous"
></script>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll(".delete-btn").forEach((button) => {
      button.addEventListener("click", function () {
        if (confirm("Are you sure you want to delete this item?")) {
          const row = this.closest("tr");
          if (row) {
            $.ajax({
              url: `/deleteBanner/${button.id}`,
              type: "delete",
              success: function (result) {
                if (result.status == 200) {
                  window.location.reload();
                }
              },
            });
          } else {
            console.error("No row found to delete.");
          }
        }
      });
    });
  });
</script>

<%- include("../layout/footer.ejs");%>
