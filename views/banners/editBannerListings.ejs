<%- include("../layout/header.ejs");%>

<div class="editBanner-container">
  <h1><center>Edit Banner</center></h1>
  <div class="backContainer">
    <a
      href="#"
      onclick="window.location.href=document.referrer;"
      class="backbutton"
      >Back</a
    >
  </div>

  <form
    action="/updateBanner/<%= banner.id %>"
    method="post"
    enctype="multipart/form-data"
  >
    <input type="hidden" name="id" value="<%= banner.id %>" />

    <img
      id="image"
      src="<%= banner.bannerImage %>"
      width="100"
      style="cursor: pointer; border-radius: 10px"
    />

    <input
      type="file"
      name="image"
      id="imageUpload"
      accept="image/*"
      style="display: none"
    />

    <button type="submit">Update</button>
  </form>

  <style>
    h1 {
      text-align: left;
    }
    .backContainer {
      margin-left: 70%;
      background-color: grey;
      color: black;
      padding: 0.5rem 1.5rem;
      text-decoration: none;
      border-radius: 20px;
      display: inline-block;
      font-size: 1rem;
      margin-bottom: 1rem;
    }
    .backbutton {
      color: white;
      text-decoration: none;
      width: 60px;
      font-size: 1.4rem;
    }
    .editBanner-container {
      margin-top: 20px;
      margin-left: 100px;
      background: #fff;
      padding: 2rem;
      border-radius: 40px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      width: 60%;
      text-align: center;
    }

    .editBanner-container h1 {
      margin-bottom: 1.5rem;
      font-size: 2rem;
      color: #333;
    }

    .editBanner-container input {
      width: 100%;
      padding: 0.75rem;
      margin: 0.5rem 0;
      border: 1px solid #ccc;
      border-radius: 20px;
      font-size: 1rem;
    }

    .editBanner-container input:focus {
      outline: none;
      border-color: #6a11cb;
    }

    .editBanner-container button {
      margin-left: auto;
      background: #6a11cb;
      color: #fff;
      border: none;
      padding: 0.75rem 4.5rem;
      border-radius: 20px;
      font-size: 1rem;
      cursor: pointer;
      transition: background 0.3s;
    }

    .editBanner-container button:hover {
      background: #2575fc;
    }

    @media (max-width: 600px) {
      .editBanner-container {
        padding: 1.5rem;
      }

      .editBanner-container h1 {
        font-size: 1.5rem;
      }

      .editBanner-container input {
        padding: 0.5rem;
        font-size: 0.9rem;
      }

      .editBanner-container button {
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
      }
    }

    h3 {
      text-align: left;
    }
  </style>

  <script>
    document.getElementById("image").addEventListener("click", function () {
      document.getElementById("imageUpload").click();
    });

    document
      .getElementById("imageUpload")
      .addEventListener("change", function (event) {
        const file = event.target.files[0];
        if (file) {
          const reader = new FileReader();
          reader.onload = function (e) {
            document.getElementById("image").src = e.target.result;
          };
          reader.readAsDataURL(file);
        }
      });
  </script>

  <%- include("../layout/footer.ejs");%>
</div>
