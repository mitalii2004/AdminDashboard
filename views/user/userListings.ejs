<%- include("../layout/header.ejs");%>

<style>
  
  .action-buttons {
    display: flex;
    align-items: center; 
  }

  .action-buttons button {
    background-color: red;
    color: white;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
  }

  .action-buttons i {
    font-size: 1rem;
  }

  .userContainer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 1rem;
}

.search-container {
  display: flex;
  align-items: center;
  gap: 10px;
}

.add-user {
  margin-right: 5%;
  background-color: cadetblue;
  color: white;
  padding: 0.8rem 1.5rem;
  text-decoration: none;
  border-radius: 5px;
  font-size: 1rem;
  white-space: nowrap;
}


</style>
<div class="userContainer">
  <div class="search-container">
    <label for="search">Search:</label>
    <input
      id="search"
      type="search"
      placeholder="Type to search..."
      aria-controls="myTable"
    />
  </div>
  <a href="/addUser" class="add-user">+ Add User</a>
</div>


<br />
<br />
<table>
  <tr>
    <th>S. No.</th>
    <th>Image</th>
    <th>Name</th>
    <th>Nick Name</th>
    <th>Email</th>
    <th>Status</th>
    <th>Action</th>
  </tr>

  <% userData.forEach((users, index) => { %>
  <tr>
    <td><%= index + 1 %></td>
    <td>
      <img src="<%= users.image ? users.image : '/images/default.png' %>"
          alt="User Image"
          style="width: 50px; height: 50px; border-radius: 10px;">
  </td>
  
      </td>

    <td><%= users.name %></td>
    <td><%= users.nickName %></td>
    <td><%= users.email %></td>
    <td><button onclick="changeStatus(this)">In-Active</button></td>
    <!-- <td>
      <div class="action-buttons">
        <a href="/editUser/<%= users.id %>">
            <i class="fas fa-edit"></i>
          </a>
        <button class="delete-btn" id="<%= users.id %>">
          <i class="fas fa-trash"></i>
        </button>
      </div>
    </td> -->
    <td>
      <div class="action-buttons">
        <a href="/editUser/<%= users.id %>">
          <i class="fas fa-edit"></i>
        </a>
        <button class="view-btn" data-id="<%= users.id %>" data-name="<%= users.name %>" data-nickName="<%= users.nickName %>" data-email="<%= users.email %>" data-image="<%= users.image %>">
          <i class="fas fa-eye"></i>
        </button>
        <button class="delete-btn" id="<%= users.id %>">
          <i class="fas fa-trash"></i>
        </button>
      </div>
    </td>
    
  </tr>
  <% }); %>
</table>

<script
  src="https://code.jquery.com/jquery-3.6.3.min.js"
  integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU="
  crossorigin="anonymous"
></script>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    document.querySelectorAll(".delete-btn").forEach((button) => {
      button.addEventListener("click", function () {
        if (confirm("Are you sure you want to delete this item?")) {
          const row = this.closest("tr");
          if (row) {
            $.ajax({
              url: `/deleteUser/${button.id}`,
              type: "delete",
              success: function (result) {
                if (result.status == 200) {
                  window.location.reload();
                }
              },
            });
          } else {
            console.error("No row found to delete.");
          }
        }
      });
    });
  });
</script>

