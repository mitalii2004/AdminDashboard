<%- include("../layout/header.ejs");%>

<div class="modal" style="display: none">
  <div class="modal-content">
    <span class="close">&times;</span>
    <h2>User Details</h2>
    <form>
      <label>Name:</label>
      <input type="text" id="<%=users.name%>" readonly />

      <label>Nick Name:</label>
      <input type="text" id="<%=users.nickName%>" readonly />

      <label>Email:</label>
      <input type="email" id="<%=users.email%>" readonly />

      <label>Image:</label>
      <br />
      <img
        id="users.image"
        src=""
        style="width: 100px; height: 100px; border-radius: 10px"
      />
    </form>
  </div>
</div>

<style>
  .modal {
    display: none;
    position: fixed;
    z-index: 1;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
  }

  .modal-content {
    background-color: white;
    padding: 20px;
    margin: 15% auto;
    width: 50%;
    border-radius: 10px;
  }

  .close {
    float: right;
    font-size: 28px;
    cursor: pointer;
  }
</style>

<script>
document.addEventListener("DOMContentLoaded", () => {
  document.querySelectorAll(".view-btn").forEach((button) => {
    button.addEventListener("click", function () {
      const userId = this.dataset.id;
      window.location.href = `/viewUser?id=${userId}`; 
    });
  });
});
</script>

